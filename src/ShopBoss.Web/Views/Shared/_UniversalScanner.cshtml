@{
    string containerId = ViewData["ContainerId"]?.ToString() ?? "scanner-container";
    string title = ViewData["Title"]?.ToString() ?? "Universal Scanner";
    bool showHelp = ViewData["ShowHelp"] as bool? ?? true;
    bool showRecentScans = ViewData["ShowRecentScans"] as bool? ?? true;
    string placeholder = ViewData["Placeholder"]?.ToString() ?? "Scan barcode or enter command...";
}

<div id="@containerId" class="universal-scanner-container mb-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <button type="button" class="btn btn-link text-decoration-none p-0 d-flex align-items-center" 
                    data-bs-toggle="collapse" data-bs-target="#scanner-body-@containerId" 
                    aria-expanded="true" aria-controls="scanner-body-@containerId"
                    onclick="toggleScannerCollapse('@containerId')">
                <i class="fas fa-barcode me-2"></i>
                <h5 class="mb-0 me-2">@title</h5>
                <i class="fas fa-chevron-down scanner-toggle-icon" id="scanner-toggle-@containerId"></i>
            </button>
            <div class="d-flex align-items-center gap-2">
                <div id="scanner-status-indicator-@containerId" class="scanner-status-indicator" style="display: none;">
                    <i class="fas fa-circle text-muted"></i>
                </div>
                @if (showHelp)
                {
                    <button type="button" class="btn btn-outline-info btn-sm" data-bs-toggle="collapse" 
                            data-bs-target="#scanner-help-@containerId" aria-expanded="false">
                        <i class="fas fa-question-circle"></i> Help
                    </button>
                }
            </div>
        </div>
        
        <div class="card-body collapse show" id="scanner-body-@containerId">
            <!-- Scanner Input -->
            <div class="row mb-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-qrcode"></i>
                        </span>
                        <input type="text" 
                               id="scanner-input-@containerId" 
                               class="form-control form-control-lg universal-scanner-input" 
                               placeholder="@placeholder"
                               data-container="@containerId"
                               autocomplete="off"
                               spellcheck="false">
                        <button type="button" 
                                id="scanner-clear-@containerId" 
                                class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="button" 
                            id="scanner-submit-@containerId" 
                            class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-search me-2"></i>Process
                    </button>
                </div>
            </div>
            
            <!-- Status Display -->
            <div id="scanner-status-@containerId" class="scanner-status" style="display: none;">
                <div class="alert mb-0" role="alert">
                    <div class="d-flex align-items-center">
                        <div class="spinner-border spinner-border-sm me-2" role="status" style="display: none;">
                            <span class="visually-hidden">Processing...</span>
                        </div>
                        <span class="status-message"></span>
                    </div>
                </div>
            </div>
            
            <!-- Results Display -->
            <div id="scanner-results-@containerId" class="scanner-results mt-3" style="display: none;">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Scan Result</h6>
                    </div>
                    <div class="card-body">
                        <div class="result-content"></div>
                    </div>
                </div>
            </div>
            
            @if (showHelp)
            {
                <!-- Help Section -->
                <div class="collapse mt-3" id="scanner-help-@containerId">
                    <div class="card card-body bg-light">
                        <h6><i class="fas fa-info-circle me-2"></i>Scanner Commands</h6>
                        <div class="row">
                            <div class="col-md-4">
                                <strong>Navigation:</strong>
                                <ul class="list-unstyled small mt-1">
                                    <li><code>NAV:ADMIN</code> - Admin Panel</li>
                                    <li><code>NAV:CNC</code> - CNC Station</li>
                                    <li><code>NAV:SORTING</code> - Sorting Station</li>
                                    <li><code>NAV:ASSEMBLY</code> - Assembly Station</li>
                                    <li><code>NAV:SHIPPING</code> - Shipping Station</li>
                                </ul>
                            </div>
                            <div class="col-md-4">
                                <strong>System:</strong>
                                <ul class="list-unstyled small mt-1">
                                    <li><code>CMD:REFRESH</code> - Refresh page</li>
                                    <li><code>CMD:HELP</code> - Show help</li>
                                    <li><code>CMD:CLEAR</code> - Clear session</li>
                                    <li><code>CMD:RECENT</code> - Recent scans</li>
                                    <li><code>CMD:SUMMARY</code> - Work order summary</li>
                                </ul>
                            </div>
                            <div class="col-md-4">
                                <strong>Admin:</strong>
                                <ul class="list-unstyled small mt-1">
                                    <li><code>ADMIN:BACKUP</code> - Create backup</li>
                                    <li><code>ADMIN:ARCHIVE</code> - Archive work order</li>
                                    <li><code>ADMIN:HEALTHCHECK</code> - Run health check</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            @if (showRecentScans)
            {
                <!-- Recent Scans -->
                <div id="recent-scans-@containerId" class="recent-scans mt-3" style="display: none;">
                    <h6><i class="fas fa-history me-2"></i>Recent Scans</h6>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Time</th>
                                    <th>Barcode</th>
                                    <th>Result</th>
                                </tr>
                            </thead>
                            <tbody class="recent-scans-body">
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
.universal-scanner-container .form-control-lg {
    font-size: 1.1rem;
    padding: 0.75rem 1rem;
}

.universal-scanner-container .scanner-status .alert {
    margin-bottom: 0;
}

.universal-scanner-container .scanner-results {
    max-height: 400px;
    overflow-y: auto;
}

.universal-scanner-container .recent-scans {
    max-height: 300px;
    overflow-y: auto;
}

.universal-scanner-container .recent-scans table {
    font-size: 0.875rem;
}

.universal-scanner-container code {
    background-color: #f8f9fa;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
}

.universal-scanner-container .status-message {
    flex-grow: 1;
}

.universal-scanner-container .scanner-toggle-icon {
    transition: transform 0.3s ease;
}

.universal-scanner-container .scanner-toggle-icon.collapsed {
    transform: rotate(-90deg);
}

.universal-scanner-container .scanner-status-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    transition: all 0.3s ease;
}

.universal-scanner-container .scanner-status-indicator.success {
    background-color: #28a745;
    box-shadow: 0 0 8px rgba(40, 167, 69, 0.6);
}

.universal-scanner-container .scanner-status-indicator.error {
    background-color: #dc3545;
    box-shadow: 0 0 8px rgba(220, 53, 69, 0.6);
}

.universal-scanner-container .scanner-status-indicator.processing {
    background-color: #007bff;
    box-shadow: 0 0 8px rgba(0, 123, 255, 0.6);
    animation: pulse 1s infinite;
}

@@keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.5; }
    100% { opacity: 1; }
}

@@media (max-width: 768px) {
    .universal-scanner-container .col-md-8,
    .universal-scanner-container .col-md-4 {
        margin-bottom: 0.5rem;
    }
}
</style>