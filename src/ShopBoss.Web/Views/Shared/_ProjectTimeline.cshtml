@model List<ShopBoss.Web.Models.ProjectEvent>?

@{
    var events = Model ?? new List<ShopBoss.Web.Models.ProjectEvent>();
    var timelineId = ViewData["TimelineId"]?.ToString() ?? "projectTimeline";
    var projectId = ViewData["ProjectId"]?.ToString() ?? "";
}

<div id="@timelineId" class="timeline-container border rounded p-3" style="max-height: 300px; overflow-y: auto;">
    @if (events.Any())
    {
        @foreach (var evt in events.OrderBy(e => e.EventDate))
        {
            <div class="timeline-event">
                <span class="badge bg-@(evt.EventType == "comment" ? "info" : "secondary")">@evt.EventType</span>
                @if (evt.RowNumber.HasValue)
                {
                    <span class="badge bg-primary me-1">Row @evt.RowNumber</span>
                }
                <small>@evt.EventDate.ToString("yyyy-MM-dd HH:mm")</small>
                <p class="mb-1">@evt.Description</p>
                <small class="text-muted">by @(evt.CreatedBy ?? "Unknown")</small>
            </div>
        }
    }
    else
    {
        <p class="text-muted">No timeline events found</p>
    }
</div>

<style>
    .timeline-event {
        border-left: 3px solid #0d6efd;
        padding-left: 15px;
        margin-bottom: 15px;
    }
    
    .timeline-event .badge {
        margin-right: 10px;
    }
</style>