@model ShopBoss.Web.Models.Project

<!-- Project Information Section -->
<div class="card mb-3">
    <div class="card-body p-2">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="d-flex align-items-center">
                <i class="fas fa-info-circle me-2 text-muted"></i>
                <small class="fw-bold">Project Information</small>
            </div>
        </div>
        
        <!-- Project Information Table (supports inline editing) -->
        <div id="project-display-@Model.Id">
            <table class="table table-sm table-borderless mb-0">
                <tbody>
                    <!-- Left: Customer Info, Right: Internal Info -->
                    <tr>
                        <td width="120" class="text-muted ps-3">Address:</td>
                        <td class="editable-field" data-field="ProjectAddress" data-type="textarea" data-project-id="@Model.Id" data-value="@(Model.ProjectAddress ?? "")">@(Model.ProjectAddress ?? "-")</td>
                        <td width="120" class="text-muted">Bid Date:</td>
                        <td class="editable-field" data-field="BidRequestDate" data-type="date" data-project-id="@Model.Id" data-value="@(Model.BidRequestDate?.ToString("yyyy-MM-dd") ?? "")">@(Model.BidRequestDate?.ToString("MM/dd/yy") ?? "-")</td>
                    </tr>
                    <tr>
                        <td class="text-muted ps-3">Contractor:</td>
                        <td class="editable-field" data-field="GeneralContractor" data-type="text" data-project-id="@Model.Id" data-value="@(Model.GeneralContractor ?? "")">@(Model.GeneralContractor ?? "-")</td>
                        <td class="text-muted">PM:</td>
                        <td class="editable-field" data-field="ProjectManager" data-type="text" data-project-id="@Model.Id" data-value="@(Model.ProjectManager ?? "")">@(Model.ProjectManager ?? "-")</td>
                    </tr>
                    <tr>
                        <td class="text-muted ps-3">Contact:</td>
                        <td class="editable-field" data-field="ProjectContact" data-type="text" data-project-id="@Model.Id" data-value="@(Model.ProjectContact ?? "")">@(Model.ProjectContact ?? "-")</td>
                        <td class="text-muted">Installer:</td>
                        <td class="editable-field" data-field="Installer" data-type="text" data-project-id="@Model.Id" data-value="@(Model.Installer ?? "")">@(Model.Installer ?? "-")</td>
                    </tr>
                    <tr>
                        <td class="text-muted ps-3">Email:</td>
                        <td class="editable-field" data-field="ProjectContactEmail" data-type="email" data-project-id="@Model.Id" data-value="@(Model.ProjectContactEmail ?? "")">@(Model.ProjectContactEmail ?? "-")</td>
                        <td class="text-muted">Category:</td>
                        <td class="editable-field" data-field="ProjectCategory" data-type="select" data-project-id="@Model.Id" data-value="@((int)Model.ProjectCategory)">
                            <span class="badge bg-secondary">@Model.ProjectCategory</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-muted ps-3">Phone:</td>
                        <td class="editable-field" data-field="ProjectContactPhone" data-type="tel" data-project-id="@Model.Id" data-value="@(Model.ProjectContactPhone ?? "")">@(Model.ProjectContactPhone ?? "-")</td>
                        <td class="text-muted">Smartsheet:</td>
                        <td>
                            @if (Model.SmartSheetId.HasValue)
                            {
                                <a href="https://app.smartsheet.com/sheets/@Model.SmartSheetId?view=grid" 
                                   target="_blank" 
                                   class="text-decoration-none">
                                    <i class="fas fa-external-link-alt me-1"></i>View Sheet
                                </a>
                            }
                            else
                            {
                                <span class="badge bg-secondary" style="font-size: 0.7em;">Not Linked</span>
                            }
                        </td>
                    </tr>
                    
                    @if (!string.IsNullOrEmpty(Model.Notes) || true)
                    {
                        <tr><td colspan="4" class="py-2"></td></tr>
                        <tr>
                            <td class="text-muted align-top ps-3">Notes:</td>
                            <td colspan="3" class="editable-field" data-field="Notes" data-type="textarea" data-project-id="@Model.Id" data-value="@(Model.Notes ?? "")">@(Model.Notes ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Project Timeline Section -->
<div class="card mb-3">
    <div class="card-body p-2">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="d-flex align-items-center">
                <i class="fas fa-history me-2 text-muted"></i>
                <small class="fw-bold">Project Timeline (@Model.Events.Count)</small>
            </div>
            <div class="d-flex align-items-center gap-2">
                <button type="button" class="btn btn-sm btn-primary" data-action="show-create-task-block" data-project-id="@Model.Id" title="Create timeline block">
                    <i class="fas fa-cube me-1"></i>New Block
                </button>
                <button type="button" id="smartsheet-sync-btn-@Model.Id" class="btn btn-sm btn-outline-primary" style="display: none;" onclick="syncToSmartSheet('@Model.Id')" title="Sync TO Smartsheet">
                    <i class="fas fa-upload me-1"></i>To Smartsheet
                </button>
                <button type="button" id="smartsheet-sync-from-btn-@Model.Id" class="btn btn-sm btn-outline-secondary" style="display: none;" onclick="syncFromSmartSheet('@Model.Id')" title="Sync FROM Smartsheet">
                    <i class="fas fa-download me-1"></i>From Smartsheet
                </button>
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-secondary" data-action="collapse-all-blocks" data-project-id="@Model.Id" title="Collapse all blocks">
                        <i class="fas fa-compress-alt"></i>
                    </button>
                    <button type="button" class="btn btn-outline-secondary" data-action="expand-all-blocks" data-project-id="@Model.Id" title="Expand all blocks">
                        <i class="fas fa-expand-alt"></i>
                    </button>
                </div>
            </div>
            <input type="file" id="fileInputHidden-@Model.Id" class="d-none" multiple 
                   data-action="upload-files-direct" data-project-id="@Model.Id">
        </div>
        
        <div id="timeline-container-@Model.Id">
            @{
                ViewData["TimelineId"] = $"timeline-{Model.Id}";
            }
            <!-- Timeline will be loaded via AJAX -->
            <div class="text-center text-muted py-3">
                <i class="fas fa-spinner fa-spin me-1"></i>Loading timeline...
            </div>
        </div>
    </div>
</div>

<!-- Add Comment Modal -->
<div class="modal fade" id="addCommentModal-@Model.Id" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addCommentForm-@Model.Id">
                    <div class="mb-3">
                        <label for="commentText-@Model.Id" class="form-label">Comment</label>
                        <textarea class="form-control" id="commentText-@Model.Id" rows="4" required 
                                  placeholder="Enter your comment..."></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="commentDate-@Model.Id" class="form-label">Date</label>
                        <input type="datetime-local" class="form-control" id="commentDate-@Model.Id" 
                               value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required>
                    </div>
                    <div class="mb-3">
                        <label for="commentAuthor-@Model.Id" class="form-label">Author</label>
                        <input type="text" class="form-control" id="commentAuthor-@Model.Id" 
                               placeholder="Your name (optional)">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-action="save-comment" data-project-id="@Model.Id">
                    <i class="fas fa-comment me-1"></i>Add Comment
                </button>
            </div>
        </div>
    </div>
</div>


<!-- Edit Attachment Comment Modal -->
<div class="modal fade" id="editAttachmentCommentModal-@Model.Id" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Attachment Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editAttachmentCommentForm-@Model.Id">
                    <div class="mb-3">
                        <label for="editAttachmentCommentText-@Model.Id" class="form-label">Comment</label>
                        <textarea class="form-control" id="editAttachmentCommentText-@Model.Id" rows="4" 
                                  placeholder="Enter your comment about this attachment..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-action="save-attachment-comment" data-project-id="@Model.Id">
                    <i class="fas fa-save me-1"></i>Save Comment
                </button>
            </div>
        </div>
    </div>
</div>

