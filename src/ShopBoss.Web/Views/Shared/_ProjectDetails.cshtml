@model ShopBoss.Web.Models.Project

<!-- Project Information Section -->
<div class="card mb-3">
    <div class="card-body p-2">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="d-flex align-items-center">
                <i class="fas fa-info-circle me-2 text-muted"></i>
                <small class="fw-bold">Project Information</small>
            </div>
            <div id="display-buttons-@Model.Id">
                <button type="button" class="btn btn-sm btn-outline-primary" data-action="project-edit" data-project-id="@Model.Id">
                    <i class="fas fa-edit me-1"></i>Edit
                </button>
            </div>
            <div id="edit-buttons-@Model.Id" class="d-none">
                <button type="button" class="btn btn-sm btn-success me-1" data-action="project-save" data-project-id="@Model.Id">
                    <i class="fas fa-save me-1"></i>Save
                </button>
                <button type="button" class="btn btn-sm btn-secondary" data-action="project-cancel" data-project-id="@Model.Id">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
            </div>
        </div>
        
        <!-- Project Information Table (supports inline editing) -->
        <div id="project-display-@Model.Id">
            <table class="table table-sm table-borderless mb-0">
                <tbody>
                    <!-- Left: Customer Info, Right: Internal Info -->
                    <tr>
                        <td width="120" class="text-muted ps-3">Address:</td>
                        <td class="editable-field" data-field="ProjectAddress" data-type="textarea">@(Model.ProjectAddress ?? "-")</td>
                        <td width="120" class="text-muted">Bid Date:</td>
                        <td class="editable-field" data-field="BidRequestDate" data-type="date" data-value="@(Model.BidRequestDate?.ToString("yyyy-MM-dd"))">@(Model.BidRequestDate?.ToString("MM/dd/yy") ?? "-")</td>
                    </tr>
                    <tr>
                        <td class="text-muted ps-3">Contractor:</td>
                        <td class="editable-field" data-field="GeneralContractor" data-type="text">@(Model.GeneralContractor ?? "-")</td>
                        <td class="text-muted">PM:</td>
                        <td class="editable-field" data-field="ProjectManager" data-type="text">@(Model.ProjectManager ?? "-")</td>
                    </tr>
                    <tr>
                        <td class="text-muted ps-3">Contact:</td>
                        <td class="editable-field" data-field="ProjectContact" data-type="text">@(Model.ProjectContact ?? "-")</td>
                        <td class="text-muted">Installer:</td>
                        <td class="editable-field" data-field="Installer" data-type="text">@(Model.Installer ?? "-")</td>
                    </tr>
                    <tr>
                        <td class="text-muted ps-3">Email:</td>
                        <td class="editable-field" data-field="ProjectContactEmail" data-type="email">@(Model.ProjectContactEmail ?? "-")</td>
                        <td class="text-muted">Category:</td>
                        <td class="editable-field" data-field="ProjectCategory" data-type="select" data-value="@((int)Model.ProjectCategory)">
                            <span class="badge bg-secondary">@Model.ProjectCategory</span>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-muted ps-3">Phone:</td>
                        <td class="editable-field" data-field="ProjectContactPhone" data-type="tel">@(Model.ProjectContactPhone ?? "-")</td>
                        <td class="text-muted">SmartSheet:</td>
                        <td>
                            @if (Model.SmartSheetId.HasValue)
                            {
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-success me-2" style="font-size: 0.7em;">Linked</span>
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-action="unlink-smartsheet" data-project-id="@Model.Id">
                                        <i class="fas fa-unlink me-1"></i>Unlink
                                    </button>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <span class="badge bg-secondary me-2" style="font-size: 0.7em;">Not Linked</span>
                                    <button type="button" class="btn btn-sm btn-outline-primary" data-action="link-smartsheet" data-project-id="@Model.Id">
                                        <i class="fas fa-link me-1"></i>Link
                                    </button>
                                </div>
                            }
                        </td>
                    </tr>
                    
                    @if (!string.IsNullOrEmpty(Model.Notes) || true)
                    {
                        <tr><td colspan="4" class="py-2"></td></tr>
                        <tr>
                            <td class="text-muted align-top ps-3">Notes:</td>
                            <td colspan="3" class="editable-field" data-field="Notes" data-type="textarea">@(Model.Notes ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Project Timeline Section -->
<div class="card mb-3">
    <div class="card-body p-2">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div class="d-flex align-items-center">
                <i class="fas fa-history me-2 text-muted"></i>
                <small class="fw-bold">Project Timeline (@Model.Events.Count)</small>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-sm btn-outline-primary" data-action="show-upload-file-modal" data-project-id="@Model.Id">
                    <i class="fas fa-upload me-1"></i>Upload File
                </button>
                <button type="button" class="btn btn-sm btn-outline-success" data-action="show-create-purchase-order" data-project-id="@Model.Id">
                    <i class="fas fa-plus me-1"></i>Add PO
                </button>
                <button type="button" class="btn btn-sm btn-outline-success" data-action="show-associate-work-orders" data-project-id="@Model.Id" title="Add Manufacturing Work Order">
                    <i class="fas fa-plus me-1"></i>Add WO
                </button>
                <button type="button" class="btn btn-sm btn-outline-info" data-action="show-create-custom-work-order" data-project-id="@Model.Id" title="Add Custom Work Order">
                    <i class="fas fa-plus me-1"></i>Custom
                </button>
                <button type="button" class="btn btn-sm btn-outline-secondary" data-action="show-add-comment" data-project-id="@Model.Id" title="Add Comment">
                    <i class="fas fa-comment me-1"></i>Comment
                </button>
                <button type="button" class="btn btn-sm btn-outline-warning" data-action="show-create-task-block" data-project-id="@Model.Id" title="Create timeline block">
                    <i class="fas fa-folder-plus me-1"></i>New Block
                </button>
            </div>
            <input type="file" id="fileInputHidden-@Model.Id" class="d-none" multiple 
                   data-action="upload-files-direct" data-project-id="@Model.Id">
        </div>
        
        <div id="timeline-container-@Model.Id">
            @{
                ViewData["TimelineId"] = $"timeline-{Model.Id}";
            }
            <!-- Timeline will be loaded via AJAX -->
            <div class="text-center text-muted py-3">
                <i class="fas fa-spinner fa-spin me-1"></i>Loading timeline...
            </div>
        </div>
    </div>
</div>

<!-- Add Comment Modal -->
<div class="modal fade" id="addCommentModal-@Model.Id" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addCommentForm-@Model.Id">
                    <div class="mb-3">
                        <label for="commentText-@Model.Id" class="form-label">Comment</label>
                        <textarea class="form-control" id="commentText-@Model.Id" rows="4" required 
                                  placeholder="Enter your comment..."></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="commentDate-@Model.Id" class="form-label">Date</label>
                        <input type="datetime-local" class="form-control" id="commentDate-@Model.Id" 
                               value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required>
                    </div>
                    <div class="mb-3">
                        <label for="commentAuthor-@Model.Id" class="form-label">Author</label>
                        <input type="text" class="form-control" id="commentAuthor-@Model.Id" 
                               placeholder="Your name (optional)">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-action="save-comment" data-project-id="@Model.Id">
                    <i class="fas fa-comment me-1"></i>Add Comment
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Upload File Modal -->
<div class="modal fade" id="uploadFileModal-@Model.Id" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Files</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="uploadFileForm-@Model.Id" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="fileInput-@Model.Id" class="form-label">Select Files</label>
                        <input type="file" class="form-control" id="fileInput-@Model.Id" multiple required>
                        <div class="form-text">You can select multiple files to upload.</div>
                    </div>
                    <div class="mb-3">
                        <label for="fileCategory-@Model.Id" class="form-label">Category</label>
                        <select class="form-select" id="fileCategory-@Model.Id">
                            <option value="Schematic">Schematic</option>
                            <option value="Correspondence">Correspondence</option>
                            <option value="Invoice">Invoice</option>
                            <option value="Proof">Proof</option>
                            <option value="Other" selected>Other</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="fileComment-@Model.Id" class="form-label">Comment (Optional)</label>
                        <textarea class="form-control" id="fileComment-@Model.Id" rows="2" 
                                  placeholder="Add a comment about these files..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-action="upload-files-with-comment" data-project-id="@Model.Id">
                    <i class="fas fa-upload me-1"></i>Upload Files
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Attachment Comment Modal -->
<div class="modal fade" id="editAttachmentCommentModal-@Model.Id" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Attachment Comment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editAttachmentCommentForm-@Model.Id">
                    <div class="mb-3">
                        <label for="editAttachmentCommentText-@Model.Id" class="form-label">Comment</label>
                        <textarea class="form-control" id="editAttachmentCommentText-@Model.Id" rows="4" 
                                  placeholder="Enter your comment about this attachment..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-action="save-attachment-comment" data-project-id="@Model.Id">
                    <i class="fas fa-save me-1"></i>Save Comment
                </button>
            </div>
        </div>
    </div>
</div>

