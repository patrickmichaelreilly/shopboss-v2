@model IEnumerable<ShopBoss.Web.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Projects</h2>
        <small class="text-muted">
            <i class="fas fa-folder-open me-1"></i>
            Manage project information, work orders, and file attachments
        </small>
    </div>
    <div class="d-flex gap-2 align-items-center">
        <!-- SmartSheet OAuth Status -->
        <div class="dropdown me-2" id="smartsheetAuthStatus">
            <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center" type="button" data-bs-toggle="dropdown" aria-expanded="false" id="smartsheetAuthDropdown">
                <i class="fas fa-table me-2" id="smartsheetIcon"></i>
                <span id="smartsheetStatusText">SmartSheet</span>
                <span class="badge ms-2" id="smartsheetStatusBadge">Checking...</span>
            </button>
            <ul class="dropdown-menu" id="smartsheetDropdownMenu">
                <li id="smartsheetAuthInfo">
                    <span class="dropdown-item-text">
                        <small class="text-muted">Status: </small><span id="smartsheetDetailStatus">Checking...</span>
                    </span>
                </li>
                <li id="smartsheetUserInfo" style="display: none;">
                    <span class="dropdown-item-text">
                        <small class="text-muted">User: </small><span id="smartsheetUserEmail"></span>
                    </span>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li id="smartsheetAuthAction">
                    <a class="dropdown-item" href="#" id="smartsheetActionButton">
                        <i class="fas fa-sign-in-alt me-2"></i>Connect to SmartSheet
                    </a>
                </li>
            </ul>
        </div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createProjectModal" data-action="clear-project-form">
            <i class="fas fa-plus me-2"></i>Create New Project
        </button>
        <button type="button" class="btn btn-info" data-action="open-smartsheet-import">
            <i class="fas fa-cloud-download-alt me-2"></i>SmartSheet Import
        </button>
    </div>
</div>

<!-- Search and Filter Controls -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <form asp-action="Index" method="get" class="d-flex">
                    <input type="text" name="search" class="form-control me-2" 
                           placeholder="Search by project ID, name, address, contact, or contractor..." 
                           value="@ViewBag.Search">
                    <input type="hidden" name="includeArchived" value="@ViewBag.IncludeArchived" />
                    <input type="hidden" name="projectCategory" value="@ViewBag.ProjectCategory" />
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="fas fa-search"></i>
                    </button>
                    @if (!string.IsNullOrEmpty(ViewBag.Search))
                    {
                        <a asp-action="Index" asp-route-includeArchived="@ViewBag.IncludeArchived" 
                           asp-route-projectCategory="@ViewBag.ProjectCategory" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-times"></i>
                        </a>
                    }
                </form>
            </div>
            <div class="col-md-3">
                <select class="form-select" data-action="project-filter-category">
                    <option value="">All Categories</option>
                    @{
                        var selectedCategory = ViewBag.ProjectCategory?.ToString();
                    }
                    @if (selectedCategory == "0")
                    {
                        <option value="0" selected>Standard Products</option>
                    }
                    else
                    {
                        <option value="0">Standard Products</option>
                    }
                    @if (selectedCategory == "1")
                    {
                        <option value="1" selected>Custom Products</option>
                    }
                    else
                    {
                        <option value="1">Custom Products</option>
                    }
                    @if (selectedCategory == "2")
                    {
                        <option value="2" selected>Small Project</option>
                    }
                    else
                    {
                        <option value="2">Small Project</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="includeArchivedToggle" 
                           data-action="project-toggle-archived" @(ViewBag.IncludeArchived == true ? "checked" : "")>
                    <label class="form-check-label" for="includeArchivedToggle">
                        <i class="fas fa-archive me-1"></i>Show Archived
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        No projects found. <button type="button" class="btn btn-link p-0 alert-link" data-bs-toggle="modal" data-bs-target="#createProjectModal">Create your first project</button> to get started.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="projects-table">
            <thead class="table-dark">
                <tr>
                    <th width="50"></th>
                    <th width="100">ID</th>
                    <th>Project Name</th>
                    <th width="120">Install Date</th>
                    <th width="80">WO</th>
                    <th width="80">Files</th>
                    <th width="80">SmartSheet</th>
                    <th width="150">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    var rowClass = project.IsArchived ? "table-secondary" : "";
                    <tr class="@rowClass">
                        <td class="text-center">
                            <i class="fas fa-chevron-right expand-icon" id="expand-icon-@project.Id" 
                               data-action="toggle-project" data-project-id="@project.Id" style="cursor: pointer;"></i>
                        </td>
                        <td class="text-muted small">@project.ProjectId</td>
                        <td>
                            <div class="d-flex align-items-center">
                                @if (project.IsArchived)
                                {
                                    <i class="fas fa-archive text-muted me-2" title="Archived Project"></i>
                                }
                                <strong>@project.ProjectName</strong>
                            </div>
                        </td>
                        <td>
                            @if (project.TargetInstallDate.HasValue)
                            {
                                @project.TargetInstallDate.Value.ToString("MM/dd/yy")
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info">@project.WorkOrders.Count</span>
                        </td>
                        <td>
                            <span class="badge bg-success">@project.Attachments.Count</span>
                        </td>
                        <td class="text-center">
                            @if (project.SmartSheetId.HasValue)
                            {
                                <i class="fas fa-table text-success" title="Linked to SmartSheet ID: @project.SmartSheetId"></i>
                            }
                            else
                            {
                                <i class="fas fa-table text-muted" title="Not linked to SmartSheet"></i>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @if (project.IsArchived)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-success" data-action="unarchive-project" data-project-id="@project.Id" title="Unarchive">
                                        <i class="fas fa-box-open"></i>
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-outline-warning" data-action="archive-project" data-project-id="@project.Id" title="Archive">
                                        <i class="fas fa-archive"></i>
                                    </button>
                                }
                                <button type="button" class="btn btn-sm btn-outline-danger" data-action="delete-project" data-project-id="@project.Id" 
                                        data-project-name="@project.ProjectName" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>

                    <!-- Expanded Project View -->
                    <tr class="d-none no-hover" id="details-@project.Id">
                        <td class="no-hover"></td>
                        <td class="no-hover"></td>
                        <td colspan="6" class="p-0 no-hover">
                            <div class="bg-light border-start border-end border-bottom p-3">
                    
                                <!-- Project info section removed - now in _ProjectDetails partial -->

                                <!-- Project Details Content -->
                                @await Html.PartialAsync("_ProjectDetails", project)
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<!-- Create Project Modal -->
<div class="modal fade" id="createProjectModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Project</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("_ProjectFormCreate")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-action="save-project">Create Project</button>
            </div>
        </div>
    </div>
</div>

<!-- Associate Work Orders Modal -->
<div class="modal fade" id="associateWorkOrdersModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Associate Work Orders</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="unassignedWorkOrdersList">
                    @if (ViewBag.UnassignedWorkOrders != null && ((List<ShopBoss.Web.Models.WorkOrder>)ViewBag.UnassignedWorkOrders).Any())
                    {
                        @foreach (var workOrder in (List<ShopBoss.Web.Models.WorkOrder>)ViewBag.UnassignedWorkOrders)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@workOrder.Id" id="wo-@workOrder.Id">
                                <label class="form-check-label" for="wo-@workOrder.Id">
                                    <strong>@workOrder.Name</strong>
                                    <br><small class="text-muted">Imported: @workOrder.ImportedDate.ToShortDateString()</small>
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No unassigned work orders available</p>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-action="associate-selected-work-orders">Associate</button>
            </div>
        </div>
    </div>
</div>

