@model IEnumerable<ShopBoss.Web.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Projects</h2>
        <small class="text-muted">
            <i class="fas fa-folder-open me-1"></i>
            Manage project information, work orders, and file attachments
        </small>
    </div>
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createProjectModal" onclick="clearProjectForm()">
            <i class="fas fa-plus me-2"></i>Create New Project
        </button>
    </div>
</div>

<!-- Search and Filter Controls -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <form asp-action="Index" method="get" class="d-flex">
                    <input type="text" name="search" class="form-control me-2" 
                           placeholder="Search by project ID, name, address, contact, or contractor..." 
                           value="@ViewBag.Search">
                    <input type="hidden" name="includeArchived" value="@ViewBag.IncludeArchived" />
                    <input type="hidden" name="projectCategory" value="@ViewBag.ProjectCategory" />
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="fas fa-search"></i>
                    </button>
                    @if (!string.IsNullOrEmpty(ViewBag.Search))
                    {
                        <a asp-action="Index" asp-route-includeArchived="@ViewBag.IncludeArchived" 
                           asp-route-projectCategory="@ViewBag.ProjectCategory" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-times"></i>
                        </a>
                    }
                </form>
            </div>
            <div class="col-md-3">
                <select class="form-select" onchange="filterByCategory(this.value)">
                    <option value="">All Categories</option>
                    @{
                        var selectedCategory = ViewBag.ProjectCategory?.ToString();
                    }
                    @if (selectedCategory == "0")
                    {
                        <option value="0" selected>Standard Products</option>
                    }
                    else
                    {
                        <option value="0">Standard Products</option>
                    }
                    @if (selectedCategory == "1")
                    {
                        <option value="1" selected>Custom Products</option>
                    }
                    else
                    {
                        <option value="1">Custom Products</option>
                    }
                    @if (selectedCategory == "2")
                    {
                        <option value="2" selected>Small Project</option>
                    }
                    else
                    {
                        <option value="2">Small Project</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="includeArchivedToggle" 
                           onchange="toggleArchiveFilter()" @(ViewBag.IncludeArchived == true ? "checked" : "")>
                    <label class="form-check-label" for="includeArchivedToggle">
                        <i class="fas fa-archive me-1"></i>Show Archived
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        No projects found. <button type="button" class="btn btn-link p-0 alert-link" data-bs-toggle="modal" data-bs-target="#createProjectModal">Create your first project</button> to get started.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="projects-table">
            <thead class="table-dark">
                <tr>
                    <th width="50"></th>
                    <th width="100">ID</th>
                    <th>Project Name</th>
                    <th width="120">Install Date</th>
                    <th width="80">WO</th>
                    <th width="80">Files</th>
                    <th width="150">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    var rowClass = project.IsArchived ? "table-secondary" : "";
                    <tr class="@rowClass">
                        <td class="text-center">
                            <i class="fas fa-chevron-right expand-icon" id="expand-icon-@project.Id" 
                               onclick="toggleProject('@project.Id')" style="cursor: pointer;"></i>
                        </td>
                        <td class="text-muted small">@project.ProjectId</td>
                        <td>
                            <div class="d-flex align-items-center">
                                @if (project.IsArchived)
                                {
                                    <i class="fas fa-archive text-muted me-2" title="Archived Project"></i>
                                }
                                <strong>@project.ProjectName</strong>
                            </div>
                        </td>
                        <td>
                            @if (project.TargetInstallDate.HasValue)
                            {
                                @project.TargetInstallDate.Value.ToString("MM/dd/yy")
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-info">@project.WorkOrders.Count</span>
                        </td>
                        <td>
                            <span class="badge bg-success">@project.Attachments.Count</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @if (project.IsArchived)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-success" onclick="unarchiveProject('@project.Id')" title="Unarchive">
                                        <i class="fas fa-box-open"></i>
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-outline-warning" onclick="archiveProject('@project.Id')" title="Archive">
                                        <i class="fas fa-archive"></i>
                                    </button>
                                }
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteProject('@project.Id', this)" 
                                        data-project-name="@project.ProjectName" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>

                    <!-- Expanded Project View -->
                    <tr class="d-none no-hover" id="details-@project.Id">
                        <td class="no-hover"></td>
                        <td class="no-hover"></td>
                        <td colspan="5" class="p-0 no-hover">
                            <div class="bg-light border-start border-end border-bottom p-3">
                    
                                <!-- Project Details Section -->
                                <div class="card mb-3">
                                    <div class="card-body p-2 position-relative">
                                        <!-- Display Mode Buttons -->
                                        <div id="display-buttons-@project.Id" class="position-absolute" style="top: 8px; right: 8px;">
                                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="editProject('@project.Id')">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </button>
                                        </div>
                                        <!-- Edit Mode Buttons -->
                                        <div id="edit-buttons-@project.Id" class="position-absolute d-none" style="top: 8px; right: 8px;">
                                            <button type="button" class="btn btn-sm btn-success me-1" onclick="saveProjectEdit('@project.Id')">
                                                <i class="fas fa-save me-1"></i>Save
                                            </button>
                                            <button type="button" class="btn btn-sm btn-secondary" onclick="cancelProjectEdit('@project.Id')">
                                                <i class="fas fa-times me-1"></i>Cancel
                                            </button>
                                        </div>
                                        
                                        <!-- Display Mode -->
                                        <div id="project-display-@project.Id">
                                            <table class="table table-sm table-borderless mb-0">
                                                <tbody>
                                                    <!-- Internal Information -->
                                                    <tr>
                                                        <td width="120" class="text-muted ps-3">Category:</td>
                                                        <td><span class="badge bg-secondary">@project.ProjectCategory</span></td>
                                                        <td width="120" class="text-muted">Bid Date:</td>
                                                        <td>@(project.BidRequestDate?.ToString("MM/dd/yy") ?? "-")</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-muted ps-3">PM:</td>
                                                        <td>@(project.ProjectManager ?? "-")</td>
                                                        <td class="text-muted">Installer:</td>
                                                        <td>@(project.Installer ?? "-")</td>
                                                    </tr>
                                                    
                                                    <!-- Customer Information -->
                                                    @if (!string.IsNullOrEmpty(project.ProjectAddress) || !string.IsNullOrEmpty(project.ProjectContact) || 
                                                         !string.IsNullOrEmpty(project.ProjectContactPhone) || !string.IsNullOrEmpty(project.ProjectContactEmail) || 
                                                         !string.IsNullOrEmpty(project.GeneralContractor))
                                                    {
                                                        <tr><td colspan="4" class="py-2"></td></tr>
                                                        @if (!string.IsNullOrEmpty(project.ProjectAddress))
                                                        {
                                                            <tr>
                                                                <td class="text-muted ps-3">Address:</td>
                                                                <td colspan="3">@project.ProjectAddress</td>
                                                            </tr>
                                                        }
                                                        <tr>
                                                            <td class="text-muted ps-3">Contact:</td>
                                                            <td>@(project.ProjectContact ?? "-")</td>
                                                            <td class="text-muted">Phone:</td>
                                                            <td>@(project.ProjectContactPhone ?? "-")</td>
                                                        </tr>
                                                        @if (!string.IsNullOrEmpty(project.ProjectContactEmail))
                                                        {
                                                            <tr>
                                                                <td class="text-muted ps-3">Email:</td>
                                                                <td colspan="3">@project.ProjectContactEmail</td>
                                                            </tr>
                                                        }
                                                        @if (!string.IsNullOrEmpty(project.GeneralContractor))
                                                        {
                                                            <tr>
                                                                <td class="text-muted ps-3">Contractor:</td>
                                                                <td colspan="3">@project.GeneralContractor</td>
                                                            </tr>
                                                        }
                                                    }
                                                    
                                                    @if (!string.IsNullOrEmpty(project.Notes))
                                                    {
                                                        <tr><td colspan="4" class="py-2"></td></tr>
                                                        <tr>
                                                            <td class="text-muted align-top ps-3">Notes:</td>
                                                            <td colspan="3">@project.Notes</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                        
                                        <!-- Edit Mode -->
                                        <div id="project-edit-@project.Id" class="d-none">
                                            @await Html.PartialAsync("_ProjectForm", project)
                                        </div>
                                    </div>
                                </div>

                                <!-- Files Section -->
                                <div class="card mb-3">
                                    <div class="card-body p-2">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-paperclip me-2 text-muted"></i>
                                            <small class="fw-bold">Files (@project.Attachments.Count)</small>
                                        </div>
                                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="document.getElementById('fileInputHidden-@project.Id').click();">
                                            <i class="fas fa-upload me-1"></i>Upload
                                        </button>
                                        <input type="file" id="fileInputHidden-@project.Id" class="d-none" multiple 
                                               onchange="uploadFilesDirectly('@project.Id', this)">
                                    </div>
                                    
                                    <div id="files-@project.Id" style="max-height: 300px; overflow-y: auto;">
                                        @if (project.Attachments.Any())
                                        {
                                            @foreach (var attachment in project.Attachments.OrderByDescending(a => a.UploadedDate))
                                            {
                                                <div class="d-flex justify-content-between align-items-center border-bottom py-1">
                                                    <div class="d-flex align-items-center flex-grow-1">
                                                        <i class="fas fa-file text-muted me-2" style="font-size: 0.9em;"></i>
                                                        <a href="@Url.Action("DownloadFile", new { id = attachment.Id })" 
                                                           class="text-decoration-none me-2" style="font-size: 0.9em;">
                                                            @attachment.OriginalFileName
                                                        </a>
                                                        <select class="form-select form-select-sm d-inline-block w-auto" 
                                                                onchange="updateFileCategory('@attachment.Id', this.value)" 
                                                                style="font-size: 0.8em;">
                                                            @{
                                                                var categories = new[] { "Schematic", "Correspondence", "Invoice", "Proof", "Other" };
                                                                foreach (var cat in categories)
                                                                {
                                                                    <option value="@cat" selected="@(attachment.Category == cat)">@cat</option>
                                                                }
                                                            }
                                                        </select>
                                                        <small class="text-muted ms-2">
                                                            @(attachment.FileSize / 1024) KB • @attachment.UploadedDate.ToString("MM/dd/yy")
                                                        </small>
                                                    </div>
                                                    <button type="button" class="btn btn-sm btn-link text-danger p-0 ms-2" 
                                                            onclick="deleteFile('@attachment.Id', '@project.Id')" title="Delete">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="text-center text-muted py-3">
                                                <small>No files uploaded</small>
                                            </div>
                                        }
                                    </div>
                                    </div>
                                </div>

                                <!-- Work Orders Section -->
                                <div class="card">
                                    <div class="card-body p-2">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-briefcase me-2 text-muted"></i>
                                            <small class="fw-bold">Work Orders (@project.WorkOrders.Count)</small>
                                        </div>
                                        <button type="button" class="btn btn-sm btn-outline-success" onclick="showAssociateWorkOrders('@project.Id')">
                                            <i class="fas fa-plus me-1"></i>Add
                                        </button>
                                    </div>
                                    
                                    <div id="work-orders-@project.Id" style="max-height: 300px; overflow-y: auto;">
                                        @if (project.WorkOrders.Any())
                                        {
                                            @foreach (var workOrder in project.WorkOrders)
                                            {
                                                <div class="d-flex justify-content-between align-items-center border-bottom py-1">
                                                    <div>
                                                        <div style="font-size: 0.9em;">
                                                            <a href="@Url.Action("ModifyWorkOrder", "Admin", new { id = workOrder.Id })" 
                                                               class="text-decoration-none fw-bold">@workOrder.Name</a>
                                                            <small class="text-muted ms-2">• Imported: @workOrder.ImportedDate.ToString("MM/dd/yy")</small>
                                                        </div>
                                                    </div>
                                                    <button type="button" class="btn btn-sm btn-link text-danger p-0" 
                                                            onclick="detachWorkOrder('@workOrder.Id', '@project.Id')" title="Remove">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="text-center text-muted py-3">
                                                <small>No work orders associated</small>
                                            </div>
                                        }
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<!-- Create Project Modal -->
<div class="modal fade" id="createProjectModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Project</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("_ProjectFormCreate")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveProject()">Create Project</button>
            </div>
        </div>
    </div>
</div>

<!-- Associate Work Orders Modal -->
<div class="modal fade" id="associateWorkOrdersModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Associate Work Orders</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="unassignedWorkOrdersList">
                    @if (ViewBag.UnassignedWorkOrders != null && ((List<ShopBoss.Web.Models.WorkOrder>)ViewBag.UnassignedWorkOrders).Any())
                    {
                        @foreach (var workOrder in (List<ShopBoss.Web.Models.WorkOrder>)ViewBag.UnassignedWorkOrders)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@workOrder.Id" id="wo-@workOrder.Id">
                                <label class="form-check-label" for="wo-@workOrder.Id">
                                    <strong>@workOrder.Name</strong>
                                    <br><small class="text-muted">Imported: @workOrder.ImportedDate.ToShortDateString()</small>
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No unassigned work orders available</p>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="associateSelectedWorkOrders()">Associate</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/project-management.js" asp-append-version="true"></script>
}

<style>
    /* Complete hover suppression for expanded project rows */
    .table-hover tbody tr.no-hover:hover,
    .table-hover tbody tr.no-hover:hover td,
    .table-hover tbody tr.no-hover:hover > td,
    .table-hover tbody tr.no-hover td.no-hover,
    .table-hover tbody tr.no-hover td.no-hover:hover,
    .table-hover tbody tr:hover > td.no-hover,
    .table tbody tr.no-hover:hover,
    .table tbody tr.no-hover:hover td,
    .table tbody tr.no-hover td.no-hover,
    .table tbody tr.no-hover td.no-hover:hover {
        background-color: transparent !important;
        background: transparent !important;
    }
    
    /* Target the specific Bootstrap table hover behavior */
    .table-striped.table-hover tbody tr.no-hover:hover,
    .table-striped.table-hover tbody tr.no-hover:hover > td,
    .table-striped.table-hover tbody tr.no-hover:hover > th {
        background-color: transparent !important;
    }
    
    /* Most specific rule to override Bootstrap's .table-hover tbody tr:hover > * */
    .table.table-striped.table-hover tbody tr.no-hover:hover > td.no-hover,
    .table.table-striped.table-hover tbody tr.no-hover:hover > td {
        background-color: transparent !important;
        background-image: none !important;
    }
</style>