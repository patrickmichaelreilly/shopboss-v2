@model IEnumerable<ShopBoss.Web.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Projects</h2>
        <small class="text-muted">
            <i class="fas fa-folder-open me-1"></i>
            Manage project information, work orders, and file attachments
        </small>
    </div>
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createProjectModal" onclick="clearProjectForm()">
            <i class="fas fa-plus me-2"></i>Create New Project
        </button>
    </div>
</div>

<!-- Search and Filter Controls -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <form asp-action="Index" method="get" class="d-flex">
                    <input type="text" name="search" class="form-control me-2" 
                           placeholder="Search by project ID, name, address, contact, or contractor..." 
                           value="@ViewBag.Search">
                    <input type="hidden" name="includeArchived" value="@ViewBag.IncludeArchived" />
                    <input type="hidden" name="projectCategory" value="@ViewBag.ProjectCategory" />
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="fas fa-search"></i>
                    </button>
                    @if (!string.IsNullOrEmpty(ViewBag.Search))
                    {
                        <a asp-action="Index" asp-route-includeArchived="@ViewBag.IncludeArchived" 
                           asp-route-projectCategory="@ViewBag.ProjectCategory" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-times"></i>
                        </a>
                    }
                </form>
            </div>
            <div class="col-md-3">
                <select class="form-select" onchange="filterByCategory(this.value)">
                    <option value="">All Categories</option>
                    @{
                        var selectedCategory = ViewBag.ProjectCategory?.ToString();
                    }
                    @if (selectedCategory == "0")
                    {
                        <option value="0" selected>Standard Products</option>
                    }
                    else
                    {
                        <option value="0">Standard Products</option>
                    }
                    @if (selectedCategory == "1")
                    {
                        <option value="1" selected>Custom Products</option>
                    }
                    else
                    {
                        <option value="1">Custom Products</option>
                    }
                    @if (selectedCategory == "2")
                    {
                        <option value="2" selected>Small Project</option>
                    }
                    else
                    {
                        <option value="2">Small Project</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="includeArchivedToggle" 
                           onchange="toggleArchiveFilter()" @(ViewBag.IncludeArchived == true ? "checked" : "")>
                    <label class="form-check-label" for="includeArchivedToggle">
                        <i class="fas fa-archive me-1"></i>Show Archived
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        No projects found. <button type="button" class="btn btn-link p-0 alert-link" data-bs-toggle="modal" data-bs-target="#createProjectModal">Create your first project</button> to get started.
    </div>
}
else
{
    <div class="project-list">
        @foreach (var project in Model)
        {
            <div class="card mb-2 project-card" data-project-id="@project.Id">
                <!-- Compact Collapsed Project Row -->
                <div class="card-header py-2 d-flex justify-content-between align-items-center project-header" 
                     style="cursor: pointer;" onclick="toggleProject('@project.Id')">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-chevron-right me-2 expand-icon" id="expand-icon-@project.Id"></i>
                        <strong class="me-3">@project.ProjectId</strong>
                        <span class="me-3">"@project.ProjectName"</span>
                        @if (project.IsArchived)
                        {
                            <i class="fas fa-archive text-muted me-2"></i>
                        }
                        <small class="text-muted me-2">
                            @if (project.TargetInstallDate.HasValue)
                            {
                                <span>Install: @project.TargetInstallDate.Value.ToString("MM/dd/yy")</span>
                            }
                        </small>
                        <span class="badge bg-info me-1">WO: @project.WorkOrders.Count</span>
                        <span class="badge bg-success me-1">Files: @project.Attachments.Count</span>
                    </div>
                    <div class="d-flex align-items-center">
                        @if (project.IsArchived)
                        {
                            <button type="button" class="btn btn-sm btn-outline-success me-1" onclick="event.stopPropagation(); unarchiveProject('@project.Id')">
                                <i class="fas fa-box-open"></i>
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-sm btn-outline-warning me-1" onclick="event.stopPropagation(); archiveProject('@project.Id')">
                                <i class="fas fa-archive"></i>
                            </button>
                        }
                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="event.stopPropagation(); deleteProject('@project.Id', this)" data-project-name="@project.ProjectName">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>

                <!-- Expanded Project View -->
                <div class="card-body project-details d-none p-3" id="details-@project.Id">
                    
                    <!-- Compact Project Details Section -->
                    <div class="bg-light p-2 mb-3 rounded">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-info-circle me-2 text-muted"></i>
                                <small class="fw-bold">Project Details</small>
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="editProject('@project.Id')">
                                <i class="fas fa-edit me-1"></i>Edit
                            </button>
                        </div>
                        <div id="project-info-@project.Id" class="mt-2">
                            @await Html.PartialAsync("_ProjectInfo", project)
                        </div>
                    </div>

                    <!-- Main 2-Column Layout: Work Orders | Files -->
                    <div class="row">
                        <!-- Work Orders Column -->
                        <div class="col-md-6">
                            <div class="border-end pe-3">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h6 class="fw-bold mb-0">
                                        <i class="fas fa-briefcase me-2"></i>Work Orders (@project.WorkOrders.Count)
                                    </h6>
                                    <button type="button" class="btn btn-sm btn-outline-success" onclick="showAssociateWorkOrders('@project.Id')">
                                        <i class="fas fa-plus me-1"></i>Add
                                    </button>
                                </div>
                                
                                <div id="work-orders-@project.Id" style="max-height: 400px; overflow-y: auto;">
                                    @if (project.WorkOrders.Any())
                                    {
                                        @foreach (var workOrder in project.WorkOrders)
                                        {
                                            <div class="d-flex justify-content-between align-items-start border-bottom py-2">
                                                <div class="flex-grow-1">
                                                    <div class="fw-bold">@workOrder.Name</div>
                                                    <small class="text-muted">Imported: @workOrder.ImportedDate.ToString("MM/dd/yy")</small>
                                                </div>
                                                <button type="button" class="btn btn-sm btn-outline-danger ms-2" 
                                                        onclick="detachWorkOrder('@workOrder.Id', '@project.Id')" title="Remove from project">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="text-center text-muted py-4">
                                            <i class="fas fa-briefcase fa-2x mb-2 opacity-50"></i>
                                            <p class="mb-0">No work orders associated</p>
                                            <small>Click "Add" to associate work orders</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Files Column -->
                        <div class="col-md-6">
                            <div class="ps-3">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h6 class="fw-bold mb-0">
                                        <i class="fas fa-paperclip me-2"></i>Files (@project.Attachments.Count)
                                    </h6>
                                </div>

                                <div id="files-@project.Id">
                                    <!-- Compact File Upload Area -->
                                    <div class="border border-dashed p-2 mb-3 rounded" style="border-style: dashed !important;">
                                        <div class="row g-2 align-items-end">
                                            <div class="col-6">
                                                <input type="file" class="form-control form-control-sm" id="fileInput-@project.Id" multiple 
                                                       onchange="toggleUploadButton('@project.Id')">
                                            </div>
                                            <div class="col-4">
                                                <select class="form-select form-select-sm" id="categorySelect-@project.Id">
                                                    <option value="Schematic">Schematic</option>
                                                    <option value="Correspondence">Correspondence</option>
                                                    <option value="Invoice">Invoice</option>
                                                    <option value="Proof">Proof</option>
                                                    <option value="Other">Other</option>
                                                </select>
                                            </div>
                                            <div class="col-2">
                                                <button type="button" class="btn btn-sm btn-primary w-100" id="uploadBtn-@project.Id"
                                                        onclick="uploadFiles('@project.Id')" disabled>
                                                    <i class="fas fa-upload"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- File List -->
                                    <div class="file-list" style="max-height: 350px; overflow-y: auto;">
                                        @if (project.Attachments.Any())
                                        {
                                            @foreach (var attachment in project.Attachments.OrderByDescending(a => a.UploadedDate))
                                            {
                                                <div class="d-flex justify-content-between align-items-start border-bottom py-2">
                                                    <div class="flex-grow-1">
                                                        <div class="d-flex align-items-center">
                                                            <i class="fas fa-file me-2 text-muted"></i>
                                                            <div>
                                                                <a href="@Url.Action("DownloadFile", new { id = attachment.Id })" 
                                                                   class="text-decoration-none fw-bold">
                                                                    @attachment.OriginalFileName
                                                                </a>
                                                                <br>
                                                                <small class="text-muted">
                                                                    <span class="badge badge-sm bg-secondary me-1">@attachment.Category</span>
                                                                    @(attachment.FileSize / 1024) KB • @attachment.UploadedDate.ToString("MM/dd/yy")
                                                                </small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <button type="button" class="btn btn-sm btn-outline-danger ms-2" 
                                                            onclick="deleteFile('@attachment.Id', '@project.Id')" title="Delete file">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="text-center text-muted py-4">
                                                <i class="fas fa-file fa-2x mb-2 opacity-50"></i>
                                                <p class="mb-0">No files uploaded</p>
                                                <small>Select files above to upload</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Create Project Modal -->
<div class="modal fade" id="createProjectModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Project</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("_ProjectFormCreate")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveProject()">Create Project</button>
            </div>
        </div>
    </div>
</div>

<!-- Associate Work Orders Modal -->
<div class="modal fade" id="associateWorkOrdersModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Associate Work Orders</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="unassignedWorkOrdersList">
                    @if (ViewBag.UnassignedWorkOrders != null && ((List<ShopBoss.Web.Models.WorkOrder>)ViewBag.UnassignedWorkOrders).Any())
                    {
                        @foreach (var workOrder in (List<ShopBoss.Web.Models.WorkOrder>)ViewBag.UnassignedWorkOrders)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@workOrder.Id" id="wo-@workOrder.Id">
                                <label class="form-check-label" for="wo-@workOrder.Id">
                                    <strong>@workOrder.Name</strong>
                                    <br><small class="text-muted">Imported: @workOrder.ImportedDate.ToShortDateString()</small>
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No unassigned work orders available</p>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="associateSelectedWorkOrders()">Associate</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/project-management.js" asp-append-version="true"></script>
}