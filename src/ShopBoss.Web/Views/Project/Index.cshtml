<!-- SmartSheet Import Modal -->
<div class="modal fade" id="smartSheetImportModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Import from SmartSheet</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="import-loading" class="text-center py-4" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <div class="mt-3">
                        <div id="import-status">Checking SmartSheet authentication...</div>
                        <div class="progress mt-2" style="display: none;">
                            <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                        </div>
                    </div>
                </div>
                
                <div id="import-sheet-selection" style="display: none;">
                    <h6>Select a job to import:</h6>
                    <div class="list-group" id="active-jobs-list">
                        <!-- Jobs will be loaded here -->
                    </div>
                </div>
                
                <div id="import-complete" class="text-center py-4" style="display: none;">
                    <i class="fas fa-check-circle text-success fa-3x"></i>
                    <h5 class="mt-3">Import Successful!</h5>
                    <p id="import-result-message"></p>
                </div>
                
                <div id="import-error" class="text-center py-4" style="display: none;">
                    <i class="fas fa-exclamation-triangle text-danger fa-3x"></i>
                    <h5 class="mt-3">Import Failed</h5>
                    <p id="import-error-message"></p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="refresh-projects-btn" style="display: none;" data-action="refresh-page">
                    <i class="fas fa-sync me-2"></i>Refresh Page
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/http-utils.js" asp-append-version="true"></script>
    <script src="~/js/project-management.js" asp-append-version="true"></script>
    <script src="~/js/smartsheet.js" asp-append-version="true"></script>
    <script src="~/js/timeline.js" asp-append-version="true"></script>
}

<style>
    /* Complete hover suppression for expanded project rows */
    .table-hover tbody tr.no-hover:hover,
    .table-hover tbody tr.no-hover:hover td,
    .table-hover tbody tr.no-hover:hover > td,
    .table-hover tbody tr.no-hover td.no-hover,
    .table-hover tbody tr.no-hover td.no-hover:hover,
    .table-hover tbody tr:hover > td.no-hover,
    .table tbody tr.no-hover:hover,
    .table tbody tr.no-hover:hover td,
    .table tbody tr.no-hover td.no-hover,
    .table tbody tr.no-hover td.no-hover:hover {
        background-color: transparent !important;
        background: transparent !important;
    }
    
    /* Target the specific Bootstrap table hover behavior */
    .table-striped.table-hover tbody tr.no-hover:hover,
    .table-striped.table-hover tbody tr.no-hover:hover > td,
    .table-striped.table-hover tbody tr.no-hover:hover > th {
        background-color: transparent !important;
    }
    
    /* Most specific rule to override Bootstrap's .table-hover tbody tr:hover > * */
    .table.table-striped.table-hover tbody tr.no-hover:hover > td.no-hover,
    .table.table-striped.table-hover tbody tr.no-hover:hover > td {
        background-color: transparent !important;
        background-image: none !important;
    }
</style>
