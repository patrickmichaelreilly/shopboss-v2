@model ShopBoss.Web.Models.Project

<div class="project-info-display" id="display-@Model.Id">
    <div class="row g-2">
        <div class="col-12">
            <strong>Project ID:</strong> @Model.ProjectId
        </div>
        <div class="col-12">
            <strong>Category:</strong> 
            <span class="badge bg-secondary">@Model.ProjectCategory</span>
        </div>
        @if (Model.BidRequestDate.HasValue)
        {
            <div class="col-12">
                <strong>Bid Date:</strong> @Model.BidRequestDate.Value.ToShortDateString()
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ProjectAddress))
        {
            <div class="col-12">
                <strong>Address:</strong><br>
                <small>@Model.ProjectAddress</small>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ProjectContact))
        {
            <div class="col-12">
                <strong>Contact:</strong> @Model.ProjectContact
                @if (!string.IsNullOrEmpty(Model.ProjectContactPhone))
                {
                    <br><small class="text-muted">@Model.ProjectContactPhone</small>
                }
                @if (!string.IsNullOrEmpty(Model.ProjectContactEmail))
                {
                    <br><small class="text-muted">@Model.ProjectContactEmail</small>
                }
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.GeneralContractor))
        {
            <div class="col-12">
                <strong>Contractor:</strong> @Model.GeneralContractor
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ProjectManager))
        {
            <div class="col-12">
                <strong>PM:</strong> @Model.ProjectManager
            </div>
        }
        @if (Model.TargetInstallDate.HasValue)
        {
            <div class="col-12">
                <strong>Install Date:</strong> @Model.TargetInstallDate.Value.ToShortDateString()
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.Installer))
        {
            <div class="col-12">
                <strong>Installer:</strong> @Model.Installer
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="col-12">
                <strong>Notes:</strong><br>
                <small>@Model.Notes</small>
            </div>
        }
        <div class="col-12 mt-2">
            <small class="text-muted">
                Created: @Model.CreatedDate.ToShortDateString()
                @if (Model.IsArchived && Model.ArchivedDate.HasValue)
                {
                    <text><br/>Archived: @Model.ArchivedDate.Value.ToShortDateString()</text>
                }
            </small>
        </div>
    </div>
</div>

<div class="project-info-edit d-none" id="edit-@Model.Id">
    @await Html.PartialAsync("_ProjectForm", Model)
    <div class="mt-3">
        <button type="button" class="btn btn-success btn-sm" onclick="saveProjectEdit('@Model.Id')">
            <i class="fas fa-save me-1"></i>Save
        </button>
        <button type="button" class="btn btn-secondary btn-sm" onclick="cancelProjectEdit('@Model.Id')">
            <i class="fas fa-times me-1"></i>Cancel
        </button>
    </div>
</div>