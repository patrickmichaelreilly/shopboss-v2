@model ShopBoss.Web.Models.Project

<div class="project-info-display" id="display-@Model.Id">
    <div class="row g-1">
        <div class="col-md-6">
            <small><strong>Category:</strong> <span class="badge bg-secondary">@Model.ProjectCategory</span></small>
        </div>
        @if (Model.BidRequestDate.HasValue)
        {
            <div class="col-md-6">
                <small><strong>Bid Date:</strong> @Model.BidRequestDate.Value.ToString("MM/dd/yy")</small>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ProjectAddress))
        {
            <div class="col-12">
                <small><strong>Address:</strong> @Model.ProjectAddress</small>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ProjectContact))
        {
            <div class="col-md-4">
                <small><strong>Contact:</strong> @Model.ProjectContact</small>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ProjectContactPhone))
        {
            <div class="col-md-4">
                <small><strong>Phone:</strong> @Model.ProjectContactPhone</small>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ProjectContactEmail))
        {
            <div class="col-md-4">
                <small><strong>Email:</strong> @Model.ProjectContactEmail</small>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.GeneralContractor))
        {
            <div class="col-md-6">
                <small><strong>Contractor:</strong> @Model.GeneralContractor</small>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ProjectManager))
        {
            <div class="col-md-6">
                <small><strong>PM:</strong> @Model.ProjectManager</small>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.Installer))
        {
            <div class="col-md-6">
                <small><strong>Installer:</strong> @Model.Installer</small>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="col-12">
                <small><strong>Notes:</strong> @Model.Notes</small>
            </div>
        }
    </div>
</div>

<div class="project-info-edit d-none" id="edit-@Model.Id">
    @await Html.PartialAsync("_ProjectForm", Model)
    <div class="mt-3">
        <button type="button" class="btn btn-success btn-sm" onclick="saveProjectEdit('@Model.Id')">
            <i class="fas fa-save me-1"></i>Save
        </button>
        <button type="button" class="btn btn-secondary btn-sm" onclick="cancelProjectEdit('@Model.Id')">
            <i class="fas fa-times me-1"></i>Cancel
        </button>
    </div>
</div>