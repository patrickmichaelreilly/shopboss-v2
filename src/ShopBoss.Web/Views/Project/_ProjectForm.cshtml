@model ShopBoss.Web.Models.Project

<form id="projectForm">
    <input type="hidden" asp-for="Id" />
    
    <div class="row g-3">
        <!-- Basic Information -->
        <div class="col-md-6">
            <label asp-for="ProjectId" class="form-label">Project ID <span class="text-danger">*</span></label>
            <input asp-for="ProjectId" class="form-control" placeholder="e.g., J001, J123" required />
        </div>
        
        <div class="col-md-6">
            <label asp-for="ProjectName" class="form-label">Project Name <span class="text-danger">*</span></label>
            <input asp-for="ProjectName" class="form-control" placeholder="Enter project name" required />
        </div>
        
        <div class="col-md-6">
            <label asp-for="ProjectCategory" class="form-label">Project Category <span class="text-danger">*</span></label>
            <select asp-for="ProjectCategory" class="form-select" required>
                <option value="">Select Category</option>
                <option value="0">Standard Products</option>
                <option value="1">Custom Products</option>
                <option value="2">Small Project</option>
            </select>
        </div>
        
        <div class="col-md-6">
            <label asp-for="BidRequestDate" class="form-label">Bid Request Date</label>
            <input asp-for="BidRequestDate" type="date" class="form-control" />
        </div>
        
        <!-- Project Details -->
        <div class="col-12">
            <label asp-for="ProjectAddress" class="form-label">Project Address</label>
            <textarea asp-for="ProjectAddress" class="form-control" rows="2" placeholder="Enter project address"></textarea>
        </div>
        
        <div class="col-md-6">
            <label asp-for="ProjectContact" class="form-label">Project Contact</label>
            <input asp-for="ProjectContact" class="form-control" placeholder="Contact person name" />
        </div>
        
        <div class="col-md-6">
            <label asp-for="ProjectContactPhone" class="form-label">Contact Phone</label>
            <input asp-for="ProjectContactPhone" type="tel" class="form-control" placeholder="(555) 123-4567" />
        </div>
        
        <div class="col-md-6">
            <label asp-for="ProjectContactEmail" class="form-label">Contact Email</label>
            <input asp-for="ProjectContactEmail" type="email" class="form-control" placeholder="contact@example.com" />
        </div>
        
        <div class="col-md-6">
            <label asp-for="GeneralContractor" class="form-label">General Contractor</label>
            <input asp-for="GeneralContractor" class="form-control" placeholder="Contractor name" />
        </div>
        
        <div class="col-md-6">
            <label asp-for="ProjectManager" class="form-label">Project Manager</label>
            <input asp-for="ProjectManager" class="form-control" placeholder="PM name" />
        </div>
        
        <div class="col-md-6">
            <label asp-for="TargetInstallDate" class="form-label">Target Install Date</label>
            <input asp-for="TargetInstallDate" type="date" class="form-control" />
        </div>
        
        <div class="col-md-6">
            <label asp-for="Installer" class="form-label">Installer</label>
            <input asp-for="Installer" class="form-control" placeholder="Installer name" />
        </div>
        
        <div class="col-12">
            <label asp-for="Notes" class="form-label">Notes</label>
            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional project notes..."></textarea>
        </div>
    </div>
</form>